<div class="container">
    <div class="row">
        <h1 class="text-center m-5">Burgers!</h1>



        <h2>ADD YOUR BURGER HERE!!!!!</h2>
        <form id="create-form" class="mt-2 mb-5">

            <div class="form-group g-3">
                <div class="col-auto">
                    <label for="ca">What type of burger would you like?</label>
                    <input type="text" id="ca" name="name">
                    <button type="submit" name="not-devoured" value="0">Add Burger</button>
                </div>
            </div>
        </form>






    </div>
    <div class="row">
        <div class="col-md-5">
            <h2 class="m-2">Burgers Available</h2>

            <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
                <li class="list-group-item">
                    {{id}} {{burger_name}} <button type="button"  data-id="{{id}}" data-devoured="{{devoured}}" name="devoured"  value="1" class="btn btn-dark btn-sm float-end changeDevoured">Devour It!</button>
                
                </li>
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-5">

            <h2 class="m-2">Burgers Eaten</h2>

            <ul class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item">
                {{id}} {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <div class="row"></div>
    <div class="row position-absolute bottom-0 start-0">




        
    </div>
    

</div>