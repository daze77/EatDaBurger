<div class="container">
    <div class="row">
        <h1 class="text-center m-5">Burgers!</h1>

    </div>
    <div class="row">
        <div class="col-md-5">
            <h2 class="m-2">Burgers Available</h2>

            <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="list-group-item">

                {{id}} {{burger_name}}
            </li>
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-5">

            <h2 class="m-2">Burgers Eaten</h2>

            <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item">
                {{id}} {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <div class="row"></div>
    <div class="row position-absolute bottom-0 start-0">

        <h2>ADD YOUR BURGER HERE!!!!!</h2>
        <form id="create-form">

            <div class="form-group g-3">
                <div class="col-auto">
                    <label for="ca">What type of burger would you like?</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="ca" name="name">
                </div>
                <div class="col-auto">
                    <button type="submit" name="not-devoured" value="0">Add Burger</button>
                </div>
                
