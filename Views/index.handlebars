<div class="container">
    <div class="row">
        <h1 class="text-center">Burgers!</h1>

    </div>
    <div class="row">
        <div class="col-md-5">
            <h2>Burgers Available</h2>

            <ul>
            {{#each burger_name}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-5">

            <h2>Burgers Eaten</h2>

            <ul>
            {{#each burger_name}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <div class="row"></div>
    <div class="row position-absolute bottom-0 start-50 translate-middle-x">

        <h2>ADD YOUR BURGER HERE!!!!!</h2>
        <form id="create-form">

            <div class="form-group g-3">
                <div class="col-auto">
                    <label for="ca">What type of burger would you like?</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="ca" name="name">
                </div>
                <div class="col-auto">
                    <button type="submit">Add Burger</button>
                </div>
                
                
                
            </div>

        
        </form>


        
    </div>
    

</div>